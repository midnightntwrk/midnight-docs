{
    "cleanUrls": true,
    "redirects": [
      {
        "source": "/academy",
        "destination": "https://academy.midnight.network",
        "permanent": true
      },
      {
        "source": "/academy/:path*",
        "destination": "https://academy.midnight.network/",
        "permanent": true
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
          { "key": "Pragma", "value": "no-cache" }
        ]
      }
    ]
  }